<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="/css/backend.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
 
<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
<script src="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css"></script>

<script> 
</script> 
</head>
<body>

  <%- include('../partial/header') %>
        <h1 style="text-align: center;">Xem Liên Lạc</h1> 
        <div class="functionb">
          <a href="/contactBackend/<%=token%>"><button class="btnb infob">Quay về</button></a>
        </div>
        
      </div>

      <div class="container">
        <table  class="table table-striped table-bordered" style="width:100%">
              <thead>
                  <tr>
                    <th>Tên Trường</th>
                    <th>Giá trị</th>
                  </tr>
              </thead>
              <tbody>
                <% showTable.forEach(function(contact){ %>
                  <tr>
                      <td>ID</td>
                      <td><%= contact.id%></td>  
                    </tr>   
                    <tr>
                      <td>Tên </td>
                      <td><%= contact.name%></td>  
                    </tr> 
                    <tr>
                      <td>Email</td>
                      <td><%= contact.email %></td>  
                    </tr> 
                    <tr>
                      <td>Số điện thoại</td>
                      <td><%= contact.phone %></td>  
                    </tr> 
                    <tr>
                      <td>Nội dung bình luận</td>
                      <td><%= contact.content %></td>  
                    </tr> 
                    <tr>
                      <td>Tình trạng(status)</td>
                      <td><%= contact.status %></td>  
                    </tr>     
                  <% }) %>
              </tbody>
          </table>
      </div>

  </div>  
</body>
<script src="/js/backendP.js"></script>
</html> 
