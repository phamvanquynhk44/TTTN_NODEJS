<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="/css/backend.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
<script src="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css"></script>

<script> 
</script> 
</head>
<body>

    <%- include('../partial/header') %>
        <h1 style="text-align: center;">SỬA BÀI VIẾT</h1>
        <div class="functionb">
            <a href="/newsBackend/<%=token%>"><button class="btnb infob">Quay về</button></a>
          </div> 


        
<div class="span9">
    <div class="content">

        <%showTableID.forEach(function(item){ %> 
        <div class="module">
            <div class="module-body">
                <form action="/doNewsBackendEdit" method="post" class="form-horizontal row-fluid" enctype="multipart/form-data">

                    <div class="mb-3">
                        <label class="control-label" for="basicinput">Tiêu Đề</label>
                        <div class="controls">
                            <textarea name="title" required><%= item.title %></textarea>
                            <input type="hidden" id="basicinput" name="token" class="span8" value="<%=token%>">
                            <input type="hidden" id="basicinput" name="id"  class="span8" value="<%=id%>">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="control-label" for="basicinput">Mô tả ngắn</label>
                        <div class="controls">
                            <textarea name="NDN" placeholder="Nhập Mô tả ngắn" required><%= item.short_description %></textarea>
                        </div>
                    </div>


                    <div class="mb-3">
                        <label class="control-label" for="basicinput">Nội dung</label>
                        <div class="controls">
                            <textarea name="editor1" required><%= item.content %></textarea>
                            <script src="//cdn.ckeditor.com/4.21.0/standard/ckeditor.js"></script>
                                <script>
                                    CKEDITOR.replace("editor1");
                                </script>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="controls">
                            <label for="avatar">Ảnh hiện tại:</label><br>
                            <% if(item.avatar == null ) {%>
                                Không có ảnh nào 
                            <% } %>
                            <img src="/news/images/avatar/<%= item.avatar %>" alt="<%= item.title %>" style="width: 100px;border: 1px solid rgb(1, 0, 0);" >
                            <input type="hidden" name="img" value="<%= item.avatar %>">                                                             
                            <div class="editImage" id="sua">
                                <a onclick="myEditImage()" >Sửa ảnh hiện tại</a>
                                    <input type="file" id="avatar" name="fimage" accept="image/png, image/jpeg, image/webp, image/gif ,image/jpg" class="form-control" >
                            </div>
                                 
                        </div>
                        
                    </div>
                
                    <div class="control-group">
                        <div class="controls">
                            <button type="submit" class="btn btn-default">SỬA[Bài Viết]</button>
                        </div>
                    </div>
                </form>
                <br> 
         
</div>
</div>
        
      </div>
      <% }) %> 

  </div>  
</body>
<script src="/js/backendP.js"></script>
</html> 
